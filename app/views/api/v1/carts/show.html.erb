<h2>Cart show</h2>
<ul>
  <% @cart.line_items.each do |line_item| %>
    <li>Item: <%= line_item.product.title %> Price: <%= number_to_currency(line_item.product.price) %>/ Quantity: <%= line_item.quantity %>/ Total Price: <%= number_to_currency(line_item.total_price) %>
  
    <ul>
      <li>
        <%= link_to "Add one", api_v1_line_item_add_path(:id => line_item), method: :post %>
        <%= link_to "Reduce one", api_v1_line_item_reduce_path(:id => line_item), method: :post %>
      </li>
      <li>
        <%= link_to "Remove item", api_v1_line_item_path(line_item), method: :delete %>
      </li>
    </ul>
  
  <% end %>
</ul>
<h3>Sub total: <%= number_to_currency(@cart.sub_total) %></h3>



<%= link_to "Proceed to checkout", new_api_v1_order_path %><br>
<%= link_to "Empty cart", api_v1_cart_path(@current_cart),method: :delete, data: {confirm: "Are you sure?"} %>



