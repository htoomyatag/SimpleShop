<p id="notice"><%= notice %></p>

<h1>Api V1 Line Items</h1>

<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Product</th>
      <th>Cart</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @api_v1_line_items.each do |api_v1_line_item| %>
      <tr>
        <td><%= api_v1_line_item.quantity %></td>
        <td><%= api_v1_line_item.product_id %></td>
        <td><%= api_v1_line_item.cart_id %></td>
        <td><%= api_v1_line_item.order_id %></td>
        <td><%= link_to 'Show', api_v1_line_item %></td>
        <td><%= link_to 'Edit', edit_api_v1_line_item_path(api_v1_line_item) %></td>
        <td><%= link_to 'Destroy', api_v1_line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

